{
  "name": "ux-audio-router",
  "version": "1.0.2-Beta-1c",
  "description": "UX Audio Router",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.ux.audiorouter",
    "productName": "UX Audio Router",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png",
      "identity": null
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/*"
    ]
  }
}